/**index.wxss**/

page {
  height: 100%;
  background-color: #8ED145;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 100rpx;
  margin: 100rpx 0;
}

.container button {
  font-size: 32rpx;
  border: 2rpx solid #999;
  background-color: #8ED145;
  font-weight: normal;
}

.info {
  font-size: 32rpx;
  font-weight: 700;
  margin: 100rpx 0;
}

.produce {
  font-size: 28rpx;
  border-radius: 10rpx;
  border: 1rpx solid #999;
  width: 220rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
}