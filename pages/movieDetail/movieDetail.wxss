/* pages/movieDetail/movieDetail.wxss */

.movieDetailContainer {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.movie_img {
  width: 70%;
  height: 700rpx;
  margin: 20rpx 0;
}

.movie_name {
  font-size: 40rpx;
  font-weight: 700;
}

.movie_detail {
  display: flex;
  flex-direction: column;
  font-size: 32rpx;
}

button {
  width: 70%;
  height: 80rpx;
  background-color: green;
  color: #fff;
  line-height: 80rpx;
  margin-top: 50rpx;
}